@model IEnumerable<TrackingModule.Models.Reader>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Map.MapFile)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NodeAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.XPos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YPos)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Map.MapFile)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NodeAddress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.XPos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.YPos)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
