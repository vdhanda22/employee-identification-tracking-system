        <!-- Rental Agreement -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/activity_margin"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/activity_center_margin"
                android:layout_marginRight="@dimen/activity_center_margin"
                android:layout_weight="1"
                android:background="@drawable/agreement_out_bg">

                <LinearLayout
                    android:id="@+id/checkout_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_margin"
                    android:paddingBottom="@dimen/activity_margin"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.4"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_agree_check_out_alt_white_24dp" />

                    <TextView
                        android:id="@+id/txt_agreement_checkout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:ellipsize="end"
                        android:gravity="center_horizontal|bottom"
                        android:maxLines="1"
                        android:text="Agreement Check-Out"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/activity_center_margin"
                android:layout_marginLeft="@dimen/activity_center_margin"
                android:layout_weight="1"
                android:background="@drawable/agreement_in_bg">

                <LinearLayout
                    android:id="@+id/checkin_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/activity_margin"
                    android:paddingBottom="@dimen/activity_margin"
                    android:weightSum="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.4"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_agree_check_in_alt_white_24dp" />

                    <TextView
                        android:id="@+id/txt_agreement_checkin"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.6"
                        android:ellipsize="end"
                        android:gravity="center_horizontal|bottom"
                        android:maxLines="1"
                        android:text="Agreement Check-In"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_13sdp" />

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


