                        android:layout_weight="0.65"
                        android:ellipsize="end"
                        android:gravity="center_horizontal|bottom"
                        android:maxLines="1"
                        android:text="Workshop Check-In"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>


