<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/regestrationverificationTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="25dp"
        android:fontFamily="roboto"
        android:gravity="center_horizontal"
        android:text="Enter your activation code that you have received in SMS"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/accesscodeEdittext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/regestrationverificationTextview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:ems="7"
        android:gravity="center_horizontal"
        android:hint="Activation Code"
        android:inputType="number"
        android:maxLength="6"
        >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/continueButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accesscodeEdittext"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"

        android:text="Continue"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/resendaccesscodeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/continueButton"
        android:layout_alignRight="@+id/continueButton"
        android:layout_below="@+id/continueButton"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:text="Resend Activation Code"
        android:textColor="@color/white"
        android:visibility="gone" />



    <TextView
        android:id="@+id/resendaccesscodeTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/continueButton"
        android:layout_alignRight="@+id/continueButton"
        android:layout_below="@+id/continueButton"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="roboto"
        android:gravity="center_horizontal"
        android:padding="3dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

</RelativeLayout>