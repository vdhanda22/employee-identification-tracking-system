<form id="frm_create_employee" name="employeeCreateForm">
    <div class="modal-header">
        <button type="button" class="close" ng-click="vm.cancel()" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
            <span ng-if="vm.employee.id">@L("EditEmployee"): {{vm.employee.name}}</span>
            <span ng-if="!vm.employee.id">@L("CreateNewEmployee")</span>
        </h4>
    </div>
    <div class="modal-body">
        <uib-tabset class="tab-container tabbable-line">
            <uib-tab heading="Access Details">

                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-4 text-center">
                        <img id="profileFrame" ng-click="vm.imageClicked()" ng-if="vm.employee.image" ng-src="~/Temp/Downloads/{{vm.employee.image}}" width="128" height="128" class="img-thumbnail img-rounded user-edit-dialog-profile-image" />
                        <img ng-click="vm.imageClicked()" ng-if="!vm.employee.image" src="@Url.Content("~/Common/Images/default-profile-picture.png")" width="128" height="128" class="img-thumbnail img-rounded user-edit-dialog-profile-image" />
                        <input nv-file-select="" id="ProfileImageFile" uploader="vm.uploader" type="file" style="display:none;" accept="image/*" />
                    </div>
                    <div class="col-sm-8">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="name" type="text" name="Name" ng-model="vm.employee.name" required maxlength="32" class="validate form-control">
                                <label for="name" class="form-label">@L("Name")</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="surname" type="text" name="Surname" ng-model="vm.employee.surname" required maxlength="32" class="validate form-control">
                                <label for="surname" class="form-label">@L("Surname")</label>
                            </div>
                        </div>
                        <div class="form-group form-float">
                            <div class="form-line">
                                <select class="form-control" type="text" name="currency"
                                        ng-class="{'edited':vm.employee.tagId}"
                                        ng-options="tag.id as tag.name for tag in vm.tags"
                                        ng-model="vm.employee.tagId">   
                                    <option value=""> Choose Tag </option>
                                </select>   
                                <label for="surname" class="form-label">@L("Tag")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="username" type="text" name="UserName" ng-model="vm.employee.userName" required maxlength="32" minlength="2" class="validate form-control">
                                <label for="username" class="form-label">@L("UserName")</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="email" type="email" name="EmailAddress" ng-model="vm.employee.emailAddress" required maxlength="256" class="validate form-control">
                                <label for="email" class="form-label">@L("EmailAddress")</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div ng-if="!vm.employee.id" class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="password" type="password" name="Password" ng-model="vm.employee.password" required maxlength="32" class="validate form-control">
                                <label for="password" class="form-label">@L("Password")</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div ng-if="!vm.employee.id" class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="confirmpassword" type="password" name="ConfirmPassword" class="validate form-control" ng-model="vm.employee.confirmPassword" equalTo="#password" data-msg-equalto="Please enter the same password again." required maxlength="32">
                                <label for="confirmpassword" class="form-label">Confirm Password</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="">
                                <input id="isactive" type="checkbox" name="IsActive" ng-model="vm.employee.isActive" checked class="form-control" />
                                <label for="isactive" class="form-label">@L("IsActive")</label>
                            </div>
                        </div>
                    </div>
                </div>
            </uib-tab>
            <uib-tab heading="Personal">
                <div class="row clearfix" style="margin-top:10px;">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="DateOfBirth" type="date" name="DateOfBirth" ng-model="vm.employee.dateOfBirth" class="validate form-control">
                                <label for="DateOfBirth" class="form-label">@L("DateOfBirth")</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="addressLane1" type="text" name="AddressLane1" ng-model="vm.employee.addressLane1" maxlength="50" class="validate form-control">
                                <label for="addressLane1" class="form-label">@L("AddressLane1")</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="addressLane2" type="text" name="AddressLane2" ng-model="vm.employee.addressLane2" maxlength="32" class="validate form-control">
                                <label for="addressLane2" class="form-label">@L("AddressLane2")</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="city" type="text" name="City" ng-model="vm.employee.city" maxlength="50" class="validate form-control">
                                <label for="city" class="form-label">@L("City")</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="state" type="text" name="State" ng-model="vm.employee.state" maxlength="50" class="validate form-control">
                                <label for="state" class="form-label">@L("State")</label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-sm-12">
                        <div class="form-group form-float">
                            <div class="form-line">
                                <input id="country" type="text" name="Country" class="validate form-control" ng-model="vm.employee.country" maxlength="50">
                                <label for="country" class="form-label">@L("Country")</label>
                            </div>
                        </div>
                    </div>
                </div>
            </uib-tab>
        </uib-tabset>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" ng-click="vm.cancel()">
            @L("Cancel")
        </button>
        <button type="submit" class="btn btn-primary waves-effect" ng-click="vm.save()" ng-disabled="userCreateForm.$invalid">
            @L("Save")
        </button>
    </div>

</form>